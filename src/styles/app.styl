canvas {
  position: absolute;
  left: 400px;
  top: 0;
  opacity: 0;
  transition: left 200ms, top 200ms, opacity 300ms ease-in-out;
}

@keyframes pulse-out {
    from { opacity: 1; }
    to { opacity: 0; }
}

body {
  margin: 0;
  padding: 0;
  overflow: hidden;
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;

  font-family: 'Avenir', Helvetica, Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  transition: background 200ms;
}

adjust_hsl(color, h = 0, s = 0, l = 0) {
  hsl(hue(color) + h, saturation(color) + s, lightness(color) + l);
}

theme(background, darker_background, secondary_text, primary_text = white) {
  background: background;
  secondary_border = darken(secondary_text, 15.2);

  a {
    color: primary_text;
  }

  .secondary-border {
    border-color: secondary_border;
  }

  .darker-background {
    background: darker_background;
  }
  .secondary-text {
    color: secondary_text;
  }

  .primary-text {
    color: primary_text;
  }
  input.image-picker {
    border: 1px dashed secondary_border;
  }
  .logo svg {
    fill: primary_text;
  }
  .secondary-fill, .svg.secondary {
    fill: secondary_text;
  }
  .primary-fill, .svg.primary {
    fill: primary_text;
  }
  .sidebar-buttons {
    svg {
      fill: secondary_text;
    }
  
    a {
      border-right: 1px solid secondary_border;
      border-bottom: 1px solid secondary_border;
    }
  }

  .input-row {
    .image-picker::placeholder {
      color: secondary_text;
    }
  }
  .title {
    color: rgba(255, 255, 255, 0.8);
  } 
  .hide-button {
    fill: darker_background;
  }
}

