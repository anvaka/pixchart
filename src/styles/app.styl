}

#progress {
  transition: opacity 200ms ease-in-out;
  animation: blink 1500ms ease-in-out infinite alternate;
  position: absolute;
  top: 42px;
  left: 0;
  width: 392px;
  font-size: 12px;
  color: #eee;
  opacity: 0;
  z-index: 2;
  text-align: center;
  background: rgba(0, 0, 0, 0.22);
  box-shadow: -1px 1px 4px rgba(0,0,0,0.8);
  -webkit-user-select: none;
  user-select: none;
}

body.paused #progress {
  pointer-events: none;
}

@keyframes blink {
    from { background: rgba(0, 0, 0, 0.22); }
    to { background: rgba(19, 41, 79, 0.7); }
}

#progress.error {
  color: #6fbf0d;
}
#progress.error a {
  color: white;
  border-bottom: 1px dashed;
}

.drop-help {
  position: fixed;
  justify-content: center;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  align-items: center;
  z-index: 3;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

@media (max-width: 800px) {
  canvas {
    left: 0%;
    top: 42px;
  }
  #progress {
    width: 100%;
  }
}
* {
  box-sizing: border-box;
  -webkit-touch-callout: none;
  -webkit-tap-highlight-color: rgba(0,0,0,0);

}

@media print {
  #app, #progress {
    display: none;
  }
  canvas {
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    position: absolute;
  }
}